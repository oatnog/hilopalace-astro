---
export const res = await fetch("https://hilopalace.com/wp-json/wp/v2/posts?_filter=title,id,link,content,excerpt,jetpack_featured_media_url")
export const posts = await res.json()
---
<head>
    <meta charset="utf-8">
</head>

<body>
  
{
  posts.map((post: any) => (
  <div
    class="flex flex-col rounded-lg bg-white shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-700 md:max-w-xl md:flex-row">

    <a href={post.link} >    
          <img
            class="h-96 w-full rounded-t-lg object-cover md:h-auto md:!rounded-none md:!rounded-l-lg"
            src={post.jetpack_featured_media_url}
            alt="" 
          />
    </a> 
    <div class="flex flex-col justify-start p-6">
      <h5
        class="mb-2 text-xl font-medium text-neutral-800 dark:text-neutral-50"
        set:html={post.title.rendered}> 
      </h5>
      <p class="mb-4 text-base text-neutral-600 dark:text-neutral-200" set:html={post.excerpt.rendered} />
    </div>
  </div>
  ))
}
</body>
